%start Json
%title "Json grammar"
%comment "Derived from http://json.org for parol by Joerg Singer."

%%

Json: Value;

Object
    : '{'^ Pair { ','^ Pair } '}'^
    | '{'^ '}'^
    ;

Pair: String ':'^ Value;

Array
    : '['^ Value { ','^ Value } ']'^ 
    | '['^ ']'^ 
    ;

Value
    : String
    | Number
    | Object
    | Array
    | 'true'^
    | 'false'^
    | 'null'^
    ;

String: /"(\\.|[^"\\])*"/ : JsonParserCsharp::JsonString;

Number: /-?(0|[1-9][0-9]*)(\.[0-9]+)?([eE][-+]?[0-9]+)?/ : JsonParserCsharp::JsonNumber;
